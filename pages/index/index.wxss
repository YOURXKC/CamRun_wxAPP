/* pages/index/index.wxss */
.nva-bar{
  width: 100%;
  position: fixed;
  z-index: 99999;
}
.s-bar{
  width: 100%;
}
.t-bar{
  width: 100%;
  overflow: hidden;
}
.logo{
  float: left;
}
.logo image{
  width: 100%;
  height: 100%;
}
.natice{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #FFE4C4;
  color: #FF8C00;
  white-space:nowrap;/*强制不换行*/
  padding: 0 10rpx;
  overflow: hidden;
  font-size: 32rpx;
  position: fixed;
  z-index: 99999;
}
.views{
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
swiper{
  width: 100%;
  height: 100%;
}
swiper swiper-item{
  position: relative;
}
.backgrounds{
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}
.body{
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
}
.bodys{
  width: 100%;
  height: auto;
}
.quan-view{
  width: 400rpx;
  height: 400rpx;
  border-radius: 200rpx;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  margin-bottom: 200rpx;
}
.quan-view-value{
  width: 320rpx;
  height: 320rpx;
  margin: 0 auto;
  position: relative;
  line-height: 320rpx;
  text-align: center;
  border-radius: 160rpx;
  font-size: 120rpx;
  font-weight: bold;
  color: white;
}
.quan-text{
  position: absolute;
  z-index: 100;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  line-height: 95rpx;
  text-align: center;
  font-size: 35rpx;
  font-weight: bold;
  letter-spacing: 10rpx;
  text-indent: 10rpx;
  background-color: white;
}
.tishi-view{
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 20rpx;
}
.tishi-value{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.9);
  font-size: 35rpx;
  text-align: center;
  color: white;
  color: #6A5ACD;
  letter-spacing: 5rpx;
  text-indent: 5rpx;
  margin-bottom: 50rpx;
}
.open-close{
  position: absolute;
  z-index: 1100;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 33rpx;
  right: 30rpx;
  bottom: 30rpx;
  border-radius: 50rpx;
  background-color: rgba(80, 80, 80, 0.5);
  color: white;
}
.quan1{
  background-color: rgba(135, 206, 235, 0.8);
}
.text1{
  color: skyblue;
}
.quan2{
  background-color: rgba(73, 170, 73, 0.8);
}
.text2{
  color: green;
}
.quan3{
  background-color: rgba(241, 88, 88, 0.8);
}
.text3{
  color: red;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-30px);
  }
  60% {
    transform: translateY(-15px);
  }
}

.arrow {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
  background-image: url(data:image/svg+xml;base64,);
  background-size: contain;
}

.bounce {
  animation: bounce 2s infinite;
}