/* pages/wode/wode.wxss */
.page-view{
  overflow-x: hidden;
}
.views{
  width: 100%;
  height: 60vw;
  position: relative;
  overflow: hidden;
  color: white;
}
.backgrounds{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.user-img{
  width: 18vw;
  height: 18vw;
  border-radius: 9vw;
  float: left;
  overflow: hidden;
  margin: 5vw 3vw 5vw 5vw;
  box-shadow: 0 0 15rpx 5rpx white;
}
.user-wxname{
  width: 60vw;
  height: 18vw;
  line-height: 18vw;
  float: left;
  font-weight: bold;
  font-size: 6.5vw;
  color: black;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin: 5vw 0;
}
.user-name{
  text-align: left;
  font-size: 6vw;
  letter-spacing: 5rpx;
  display: inline-block;
  position: absolute;
  right: 5vw;
  bottom: 11vw;
}
.user-no{
  text-align: right;
  font-size: 4vw;
  display: inline-block;
  position: absolute;
  bottom: 5vw;
  right: 5vw;
}
.caozuo-view{
  margin: 0 auto;
  width: 100%;
  height: 100vw;
  padding-top: 2vw;
  overflow: hidden;
  text-align: center;
}
.caozuo-display{
  display: inline-block;
}
.jianxi{
  width: 60vw;
  height: 1rpx;
}
.button-block{
  width: 32vw;
  height: 32vw;
  float: left;
  overflow: hidden;
}
.block1{
  border: 1rpx solid rgb(200, 200, 200);
  border-width: 0 1rpx 1rpx 0;
}
.block2{
  border-bottom: 1rpx solid rgb(200, 200, 200);
}
.block3{
  border-bottom: 0;
}
.block-img{
  width: 14vw;
  height: 14vw;
  margin: 6vw auto 2vw;
}
.block-img image{
  width: 100%;
  height: 100%;
}
.block-name{
  width: 28vw;
  height: 4vw;
  line-height: 4vw;
  margin: 0 auto 2vw;
  color: gray;
  font-size: 31rpx;
}