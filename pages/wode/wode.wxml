<!--pages/wode/wode.wxml-->
<view class="page-view">

  <!--信息块-->
  <view class="views">
    <!--背景-->
    <image class="backgrounds" src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/wode_background.png"></image>

    <!--头像，用户名-->
    <view class="user-img">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="user-wxname">
      <open-data type="userNickName"></open-data>
    </view>
    
    <!--真实姓名-->
    <view class="user-name">{{user_name}}</view>
    <!--学号-->
    <view class="user-no">No.{{user_no}}</view>
  </view>

  <!--操作区-->
  <view class="caozuo-view">
    <view class="caozuo-display">
      <view class="button-block block1" bindtap="clickUpdate" data-id="1">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/update_password.png"></image></view>
        <view class="block-name">密码修改</view>
      </view>
      <view class="button-block block1" bindtap="clickUpdate" data-id="2">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/update_major.png"></image></view>
        <view class="block-name">专业修改</view>
      </view>
      <view class="button-block block2" bindtap="clickUpdate" data-id="3">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/update_grade.png"></image></view>
        <view class="block-name">年级修改</view>
      </view>
      <view class="jianxi"></view>
      <view class="button-block block1" bindtap="clickUpdate" data-id="4">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/update_class.png"></image></view>
        <view class="block-name">班级修改</view>
      </view>
      <view class="button-block block1" bindtap="clickUpdate" data-id="5">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/kechengbiao.png"></image></view>
        <view class="block-name">课程表</view>
      </view>
      <view class="button-block block2" bindtap="clickUpdate" data-id="6">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/chengjidan.png"></image></view>
        <view class="block-name">成绩单</view>
      </view>
      <view class="jianxi"></view>
      <!--在此增加内容-->
      <view class="button-block block1 block3" bindtap="clickUpdate" data-id="7">
        <view class="block-img"><image src="cloud://camrun-8d4v3.6361-camrun-8d4v3-1302430934/camrun/wode_img/gerenziliao.png"></image></view>
        <view class="block-name">个人资料</view>
      </view>
      <view class="button-block block1 block3" bindtap="clickUpdate" data-id="8"></view>
      <view class="button-block block2 block3" bindtap="clickUpdate" data-id="9"></view>
      <view class="jianxi"></view>
    </view>
  </view>

</view>