/* pages/uppassword/uppassword.wxss */
.views{
  width: 100%;
  overflow-x: hidden;
  padding-top: 5vw;
}
input{
  width: 82vw;
  height: 12vw;
  line-height: 12vw;
  margin: 2vw auto;
  display: block;
  border: 1rpx solid rgb(200, 200, 200);
  padding: 0 4vw;
  border-radius: 6vw;
}
.button{
  width: 90vw;
  height: 12vw;
  line-height: 12vw;
  margin: 5vw auto;
  color: white;
  background-color: rgb(37, 23, 236);
  text-align: center;
  border-radius: 6vw;
  font-weight: bold;
  font-size: 38rpx;
  letter-spacing: 10rpx;
  text-indent: 10rpx;
}
.tishi{
  width: 100%;
  text-align: center;
  color: gray;
  font-size: 32rpx;
  margin-top: 10vw;
}