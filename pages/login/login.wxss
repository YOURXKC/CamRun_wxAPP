/* pages/login/login.wxss */
.backgrounds{
  width: 100%;
  height: 100vh;
  position: fixed;
  z-index: -1;
  overflow: hidden;
}
.back-image{
  width: 100%;
  height: 100%;
}
.input-viewss{
  z-index: 1;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  text-align: center;
}
.input-views{
  width: 90vw;
  height: auto;
  margin: 0 auto;
}
.logo{
  display: block;
  width: 87vw;
  height: 29vw;
  margin: 0 auto 20vw;
}
.input-view{
  width: 100%;
  height: auto;
}
.input-user-password{
  width: 100%;
  height: 12vw;
  border-radius: 6vw;
  margin: 5vw 0;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.4);
}
.input-icon{
  width: 8vw;
  height: 8vw;
  float: left;
  margin: 2vw 2vw 2vw 3vw;
}
.input-value{
  width: 75vw;
  height: 12vw;
  float: left;
  text-align: left;
}
.input-color{
  color: rgb(70, 70, 70);
}
.button{
  width: 100%;
  height: 12vw;
  border-radius: 6vw;
  line-height: 12vw;
  font-size: 35rpx;
  text-align: center;
  font-weight: bold;
  color: white;
  background-color: rgb(50, 128, 245);
  letter-spacing: 15rpx;
  text-indent: 15rpx;
  margin-top: 10vw;
  margin-bottom: 20vw;
}